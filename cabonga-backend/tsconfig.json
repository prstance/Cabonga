{
  "compilerOptions": {
    "target": "ES2021",   
    "moduleDetection": "auto",                   
    "module": "ES2022",                              
    "moduleResolution": "node",
    "types": ["bun-types"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
